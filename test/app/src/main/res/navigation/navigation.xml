<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.test.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_pageLoginFragment"
            app:destination="@id/pageLoginFragment" />
    </fragment>
    <fragment
        android:id="@+id/pageLoginFragment"
        android:name="com.example.test.pageLoginFragment"
        android:label="fragment_page_login"
        tools:layout="@layout/fragment_page_login" >
        <action
            android:id="@+id/action_pageLoginFragment_to_testFragment"
            app:destination="@id/testFragment" />
        <action
            android:id="@+id/action_pageLoginFragment_to_testFragment2"
            app:destination="@id/testFragment" />
        <action
            android:id="@+id/action_pageLoginFragment_to_finalFragment"
            app:destination="@id/finalFragment" />
    </fragment>
    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.test.TestFragment"
        android:label="fragment_test2"
        tools:layout="@layout/fragment_test2" />
    <fragment
        android:id="@+id/finalFragment"
        android:name="com.example.test.FinalFragment"
        android:label="fragment_final"
        tools:layout="@layout/fragment_final" />
</navigation>